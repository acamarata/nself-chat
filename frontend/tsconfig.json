{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // New v0.9.2 monorepo paths (PRIMARY)
      "@nself-chat/core": ["./packages/core/src"],
      "@nself-chat/core/*": ["./packages/core/src/*"],
      "@nself-chat/api": ["./packages/api/src"],
      "@nself-chat/api/*": ["./packages/api/src/*"],
      "@nself-chat/state": ["./packages/state/src"],
      "@nself-chat/state/*": ["./packages/state/src/*"],
      "@nself-chat/ui": ["./packages/ui/src"],
      "@nself-chat/ui/*": ["./packages/ui/src/*"],
      "@nself-chat/config": ["./packages/config/src"],
      "@nself-chat/config/*": ["./packages/config/src/*"],
      "@nself-chat/testing": ["./packages/testing/src"],
      "@nself-chat/testing/*": ["./packages/testing/src/*"],

      // Legacy v0.9.0-v0.9.1 paths (DEPRECATED - use @nself-chat/* instead)
      // These now point to web app location (migrated in C092-008)
      // Will be removed in v0.10.0
      "@/*": ["./apps/web/src/*"],
      "@/components/*": ["./apps/web/src/components/*"],
      "@/lib/*": ["./apps/web/src/lib/*"],
      "@/hooks/*": ["./apps/web/src/hooks/*"],
      "@/types/*": ["./apps/web/src/types/*"],
      "@/utils/*": ["./apps/web/src/utils/*"],
      "@/config/*": ["./apps/web/src/config/*"],
      "@/graphql/*": ["./apps/web/src/graphql/*"],
      "@/styles/*": ["./apps/web/src/styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "platforms/**/*",
    "deploy/**/*",
    "**/examples/**/*",
    "**/*.example.tsx",
    "**/*.example.ts",
    "apps/web/src/lib/bots/examples/**/*",
    "apps/web/src/lib/workflows/examples/**/*",
    "apps/web/src/components/**/examples.tsx",
    "apps/web/src/components/**/*.example.tsx"
  ]
}
