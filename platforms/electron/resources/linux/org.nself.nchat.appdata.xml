<?xml version="1.0" encoding="UTF-8"?>
<!-- AppData XML for Linux software centers -->
<component type="desktop-application">
  <id>org.nself.nchat</id>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <name>nchat</name>
  <summary>Team Communication Platform</summary>
  <description>
    <p>
      nchat is a modern, white-label team communication platform that combines
      the best features of Slack and Telegram. Built with Electron and Next.js,
      it provides a seamless cross-platform experience for team collaboration.
    </p>
    <p>Features:</p>
    <ul>
      <li>Real-time messaging with WebSocket support</li>
      <li>Public and private channels</li>
      <li>Direct messages and group conversations</li>
      <li>Message threads and replies</li>
      <li>File sharing and attachments</li>
      <li>Rich text editing with markdown support</li>
      <li>Emoji reactions and custom emojis</li>
      <li>Voice and video calls</li>
      <li>Screen sharing</li>
      <li>Integrations with popular tools</li>
      <li>Dark mode and customizable themes</li>
      <li>Desktop notifications</li>
      <li>Keyboard shortcuts</li>
      <li>Multi-workspace support</li>
    </ul>
  </description>

  <launchable type="desktop-id">nchat.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main chat interface</caption>
      <image>https://nself.org/images/screenshots/nchat-main.png</image>
    </screenshot>
    <screenshot>
      <caption>Channel view with threads</caption>
      <image>https://nself.org/images/screenshots/nchat-channels.png</image>
    </screenshot>
    <screenshot>
      <caption>Settings and customization</caption>
      <image>https://nself.org/images/screenshots/nchat-settings.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://nself.org</url>
  <url type="bugtracker">https://github.com/nself/nself-chat/issues</url>
  <url type="help">https://docs.nself.org</url>
  <url type="donation">https://nself.org/donate</url>

  <developer_name>nself</developer_name>

  <provides>
    <binary>nchat</binary>
    <id>nchat.desktop</id>
  </provides>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-audio">moderate</content_attribute>
  </content_rating>

  <releases>
    <release version="0.8.0" date="2026-01-31">
      <description>
        <p>Major release with desktop application improvements:</p>
        <ul>
          <li>Complete Windows NSIS installer with code signing</li>
          <li>macOS DMG and PKG with notarization</li>
          <li>Linux AppImage, .deb, and .rpm packages</li>
          <li>Auto-updater with UI prompts</li>
          <li>System tray on all platforms</li>
          <li>Native notifications</li>
          <li>Deep linking support (nchat:// protocol)</li>
          <li>Performance optimizations</li>
        </ul>
      </description>
    </release>
    <release version="0.7.0" date="2026-01-29">
      <description>
        <p>Feature release:</p>
        <ul>
          <li>AI-powered features (summarization, moderation)</li>
          <li>Bot framework and management UI</li>
          <li>Smart search with vector embeddings</li>
          <li>Enhanced moderation tools</li>
        </ul>
      </description>
    </release>
  </releases>

  <categories>
    <category>Network</category>
    <category>InstantMessaging</category>
    <category>Chat</category>
  </categories>

  <keywords>
    <keyword>chat</keyword>
    <keyword>messaging</keyword>
    <keyword>team</keyword>
    <keyword>communication</keyword>
    <keyword>collaboration</keyword>
    <keyword>slack</keyword>
    <keyword>telegram</keyword>
  </keywords>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
  </recommends>

  <requires>
    <internet>always</internet>
  </requires>

  <update_contact>hello@nself.org</update_contact>
</component>
