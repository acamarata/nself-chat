<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow unsigned executable memory (required for JIT in V8/JavaScript) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation (required for JavaScript engines) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow dyld environment variables (for debugging) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Disable library validation (allows loading of frameworks) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Network client (outgoing connections) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Network server (listening for connections) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Device camera access (for video calls) -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Device microphone access (for voice/video calls) -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- User-selected files (read/write) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Downloads folder (read/write) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Desktop folder (read/write, for file sharing) -->
    <key>com.apple.security.files.desktop.read-write</key>
    <true/>

    <!-- Documents folder (read/write, for file sharing) -->
    <key>com.apple.security.files.documents.read-write</key>
    <true/>

    <!-- Allow automation (for deep links) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Screen recording (for screen sharing) -->
    <key>com.apple.security.device.screen-recording</key>
    <true/>

    <!-- USB access (for potential hardware integrations) -->
    <key>com.apple.security.device.usb</key>
    <true/>

    <!-- Bluetooth (for device integrations) -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>

    <!-- Contacts (for user directory integration) -->
    <key>com.apple.security.personal-information.addressbook</key>
    <true/>

    <!-- Notifications -->
    <key>com.apple.security.notifications</key>
    <true/>

    <!-- Print capability -->
    <key>com.apple.security.print</key>
    <true/>

    <!-- Application groups (for shared containers) -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>org.nself.nchat</string>
    </array>
</dict>
</plist>
